<VirtualHost *:80>
	ServerName band.riffal.com
    DocumentRoot /band/htdocs
    CustomLog /var/log/apache2/access.log combined

	IndexIgnore *

	<Directory "/band/htdocs">
		Options FollowSymLinks -Indexes
		AllowOverride All
		Order allow,deny
		Allow from all
		EnableSendfile Off
	</Directory>
</VirtualHost>

